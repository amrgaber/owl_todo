<templates>
    <t t-name="MenuItem">
        <li t-attf-class="list {{ props.active and 'active' or '' }}" t-ref="menuItem">
            <a href="#" t-on-click.prevent="onActivateMenu" t-att-data-name="props.name">
                <span class="icon">
                    <i t-attf-class="fa fa-solid {{props.iconClass}}" />
                </span>
                <span class="text" t-out="props.string"/>
            </a>
        </li>
    </t>

    <t t-name="Menu">
        <div class="navigation d-flex justify-content-center ms-1" t-on-menu-changed="onMenuChanged">
            <ul class="pt-1 p-3">
                <MenuItem active="state.activeMenuItem === 'all' and true or false " iconClass="'fa-home'" name="'all'" string="'All'"/>
                <MenuItem active="state.activeMenuItem === 'live' and true or false" iconClass="'fa-hourglass-half'" name="'live'" string="'Live'"/>
                <MenuItem active="state.activeMenuItem === 'past' and true or false" iconClass="'fa-hourglass-end'" name="'past'" string="'Past'"/>
                <MenuItem active="state.activeMenuItem === 'future' and true or false" iconClass="'fa-hourglass-start'" name="'future'" string="'Future'"/>
            </ul>
        </div>
    </t>
</templates>